@model IEnumerable<Domain.Entities.Feedback>

@{
    ViewBag.Title = "Админ панель: Отзывы";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Отзывы</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Имя</th>
                <th class="text-right">Город</th>
                <th class="text-center">Текст</th>
                <th class="text-center">Ответ</th>
                <th class="text-center">Показывать</th>
            </tr>
            @foreach (var item in Model)
            {
                
            <tr>
                <td class="text-right">@item.Id</td>
                @if (item.Name != null)
                {
                    <td>@Html.ActionLink(item.Name, "FeedbackEdit", new { item.Id })</td>
                }
                else
                {
                    <td class="text-right">@item.Name</td>
                }
                @*<td class="text-right">@item.Name</td>*@
                <td class="text-right">@item.City</td>
                @*<td class="text-right"> <textarea width="100%" rows="3">@item.Text </textarea></td>*@
                <td class="text-center">@item.Text </td>
                <td class="text-center">@item.Answer </td>
                <td class="text-center">@item.Show </td>
            </tr>
            }
        </table>
    </div>

</div>